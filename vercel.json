{
  "version": 2,
  "builds": [
    {
      "src": "api/webhook.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/webhook",
      "dest": "api/webhook.py"
    },
    {
      "src": "/health",
      "dest": "api/health.py"
    },
    {
      "src": "/",
      "dest": "api/index.py"
    },
    {
      "src": "/debug",
      "dest": "api/debug.py"
    },
    {
      "src": "/webhook-info",
      "dest": "api/webhook_info.py"
    },
    {
      "src": "/set-webhook",
      "dest": "api/set_webhook.py"
    }
  ],
  "env": {
    "TELEGRAM_BOT_TOKEN": "${TELEGRAM_BOT_TOKEN}",
    "WEBHOOK_URL": "${WEBHOOK_URL}"
  }
}